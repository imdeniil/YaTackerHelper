# =============================================================================
# Yandex Tracker API
# =============================================================================
TRACKER_API_KEY=your_oauth_token_here
TRACKER_ORG_ID=your_org_id_here

# =============================================================================
# Telegram Bot
# =============================================================================
BOT_TOKEN=your_bot_token_here

# =============================================================================
# Сброс базы данных (опционально, только для Docker)
# =============================================================================

# ⚠️  ВНИМАНИЕ: Установка RESET_DB=true удалит все данные из БД при запуске!
# Используй только для исправления структуры таблиц (например, после обновления)
# После успешного запуска ОБЯЗАТЕЛЬНО удали эту переменную или установи в false

# RESET_DB=true

# =============================================================================
# Владельцы бота (обязательно минимум OWNER1)
# =============================================================================

# Владелец 1 (обязательно)
OWNER1_USERNAME=telegram_username1
OWNER1_TRACKER_LOGIN=tracker_login1
OWNER1_DISPLAY_NAME=Display Name 1

# Владелец 2 (опционально)
OWNER2_USERNAME=telegram_username2
OWNER2_TRACKER_LOGIN=tracker_login2
OWNER2_DISPLAY_NAME=Display Name 2

# =============================================================================
# Database (PostgreSQL)
# =============================================================================

# --- Вариант 1: Docker Compose с PostgreSQL (docker-compose.yml) ---
# Используй это значение для запуска с встроенным PostgreSQL контейнером
DATABASE_URL=postgresql+asyncpg://yatrackerhelper:changeme@postgres:5432/yatrackerhelper

# Пароль для PostgreSQL контейнера (используется в docker-compose.yml)
DB_PASSWORD=changeme

# --- Вариант 2: Подключение к существующей БД (docker-compose.bot-only.yml) ---
# Раскомментируй и настрой для подключения к внешней PostgreSQL БД
# DATABASE_URL=postgresql+asyncpg://myuser:mypassword@myhost:5432/mydatabase

# Примеры для разных сценариев:
# - PostgreSQL на локальной машине (Windows/Mac):
#   DATABASE_URL=postgresql+asyncpg://user:pass@host.docker.internal:5432/dbname
# - PostgreSQL на локальной машине (Linux):
#   DATABASE_URL=postgresql+asyncpg://user:pass@172.17.0.1:5432/dbname
# - PostgreSQL на удаленном сервере:
#   DATABASE_URL=postgresql+asyncpg://user:pass@192.168.1.100:5432/dbname

# --- Вариант 3: Локальный запуск (без Docker) ---
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/yatrackerhelper
